
@{
    ViewBag.Title = "Listado de Tarjetas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">

    $(document).ready(function () {
        Generar();
    });

    function Generar() {
        $("#divReportArea").load('@Url.Action("RefreshListadoTarjetas", "Reporte", new { area = "Reportes" })');
    }

</script>
<div class="row">
    <div class="col-md-12">
        <h1 style="margin:15px;">Listado de Tarjetas de Descuento</h1>
    </div>
</div>

<div class="col-md-12">
    <div class="box box-default">
        <div class="box-header with-border">
            <div class="row form-group">
            </div>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <div id="divReportArea"></div>
                </div>
            </div>
        </div>
    </div>
</div>